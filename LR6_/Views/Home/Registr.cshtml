@{
    ViewData["Title"] = "Список смартфонов";
    Layout = null;
}
<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
        }

        fieldset {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
            color: #333333;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 28px;
            text-transform: uppercase;
        }

        form {
            margin-bottom: 20px;
        }

        p {
            margin: 10px 0;
            font-size: 16px;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #cccccc;
            border-radius: 4px;
            margin-bottom: 10px;
        }

        label {
            display: inline-block;
            margin-right: 10px;
        }

        input[type="submit"] {
            background-color: #333;
            color: #ffffff;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
        }

        .message {
            margin-top: 10px;
            text-align: center;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <fieldset>
        <h1>Регистрация</h1>
        <form method="post">
            <p>Имя</p>
            <input type="text" maxlength="20" name="name" id="name" />
            <p>Пол</p>
            М @Html.CheckBox("M")
            Ж @Html.CheckBox("W")
            <p>Телефон</p>
            <input type="text" maxlength="11" name="phone" id="phone" />
            <div class="form-group">
            <p>Пароль</p>
            <input type="password" name="password" id="passsword" class="form-control" placeholder="Password" />
            </div>

            <input type="submit" value="Зарегистрироваться" />
        </form>
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <script>alert('@Html.Raw(ViewBag.Message)');</script>
        }

    </fieldset>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $("#M").prop("checked", true)
        $(document).ready(function () {
            $('#M').change(function () {
                if (this.checked) {
                    $('#W').prop('checked', false);
                }
            });

            $('#W').change(function () {
                if (this.checked) {
                    $('#M').prop('checked', false);
                }
            });
        });
    </script>
</body>
</html>


