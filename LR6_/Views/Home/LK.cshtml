@model LR6_.Models.User

<!DOCTYPE html>
<html>
<head>
    <title>My Profile</title>

    <style>
        body {
            background-color: #f2f2f2;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.3);
            margin: 50px auto;
            padding: 20px;
            width: 80%;
            max-width: 800px;
        }

        h1 {
            color: #333;
            font-size: 36px;
            margin: 0 0 20px;
            text-align: center;
        }

        .profile-info {
            margin: 20px 0;
        }

        h3 {
            color: #333;
            font-size: 24px;
            margin: 0 0 10px;
        }

        p {
            color: #666;
            font-size: 18px;
            margin: 0;
        }

        input[type="submit"] {
            background-color: #333;
            border: none;
            border-radius: 5px;
            color: #fff;
            cursor: pointer;
            font-size: 18px;
            margin: 10px;
            padding: 10px 20px;
            transition: background-color 0.3s ease;
        }

            input[type="submit"]:hover {
                background-color: #666;
            }

        .return-button {
            background-color: #f44336;
        }

        .products-button {
            background-color: #4caf50;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>My Profile</h1>
        <div class="profile-info">
            <h3>Name: @Model.Name</h3>
            <p>Sex: @Model.Sex</p>
            <p>Role: @Model.Role</p>
            <p>Phone Number: @Model.NumberTelephone</p>
        </div>
        <form method="get" asp-controller="Home" asp-action="Index">
            <input type="submit" value="Страница входа" class="return-button" />
        </form>
        <form method="get" asp-controller="Home" asp-action="List">
            <input type="submit" value="Товары" class="products-button" />
        </form>
    </div>
</body>
</html>


