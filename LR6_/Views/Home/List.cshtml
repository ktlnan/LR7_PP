@model IEnumerable<LR6_.Models.Phone>
@{
    ViewData["Title"] = "Список смартфонов";
    Layout = null;
}

<html>
<head>
    <title>Магазин смартфонов</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
        }

        h3 {
            text-align: center;
            margin-top: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #cccccc;
        }

        th {
            background-color: #512da8;
            color: #ffffff;
        }

        a {
            text-decoration: none;
            color: #512da8;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <h3>Смартфоны</h3>
    <table>
        <tr>
            <td>Модель</td>
            <td>Производитель</td>
            <td>Цена</td>
            <td></td>
        </tr>
        @foreach (var phone in Model)
        {
            <tr>
                <td>@phone.Name</td>
                <td>@phone.Company</td>
                <td>@phone.Price</td>
                <td><a href="~/Buy/Buy/@phone.PhoneId">Купить</a></td>
            </tr>
        }
    </table>


</body>
</html>
