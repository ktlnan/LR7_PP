@model LR6_.Models.Phone
@{
    ViewData["Title"] = "Телефон";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Магазин смартфонов</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
        }

        h3 {
            text-align: center;
            margin-top: 20px;
        }

        p {
            text-align: center;
            font-size: 18px;
            margin: 10px 0;
        }

        form {
            text-align: center;
            margin-top: 20px;
        }

        input[type="text"] {
            padding: 10px;
            width: 300px;
            border: 1px solid #cccccc;
            border-radius: 4px;
        }

        input[type="submit"] {
            background-color: #333;
            color: #ffffff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

            input[type="submit"]:hover {
                background-color: #666;
            }
    </style>
</head>
<body>
    <h3>Оформление заказа</h3>
    <p>Смартфон @Model.Name</p>
    <p>Цена @Model.Price</p>
    <form method="post" action="@Url.Action("Buy1", "Buy")">
        <input type="text" placeholder="адрес" name="address" />
        <input type="submit" value="Заказать" />
    </form>

</body>
</html>